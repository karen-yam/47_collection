<div class="flex items-center justify-center p-4">
  <div class="max-w-md w-full bg-white rounded-xl shadow-lg p-8">
    <h2 class="text-2xl font-bold text-gray-900 mb-6 text-center">パスワードリセット</h2>
    <%= render "devise/shared/error_messages", resource: resource %>
    
    <%= form_with model: @user, url: user_password_path(resource_name), local: true do |f| %>
      <div class="space-y-4">
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">メールアドレス</label>
          <%= f.email_field :email, autofocus: true, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 outline-none transition-all" %>
        </div>

        <%= f.submit "パスワードリセットメールを送信", class: "w-full bg-indigo-600 hover:bg-indigo-700 text-white font-medium py-2.5 rounded-lg transition-colors" %> 
      </div>
    <% end %>

    <div class="mt-4">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
