<h1 class="text-2xl font-bold mb-4">マイコレクション</h1>

<div class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-6 gap-4">
  <% Prefecture.all.each do |prefecture| %>
    <% post = @posts.find { |p| p.prefecture_id == prefecture.id } %>
    <%= render "post_card", prefecture: prefecture, post: post %>
  <% end %>
</div>
