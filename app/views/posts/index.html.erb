<h1 class="text-2xl text-center font-bold mb-4">マイコレクション</h1>

<div class="flex justify-center items-center gap-10 mb-4">
  <div class="text-2xl font-bold mb-4"><%= current_user.posted_prefecture_count %> /47都道府県 達成</div>
  <%= link_to "お土産を追加する", new_post_path, class: "btn btn-primary" %>
</div>

<div class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-6 gap-4">
  <% Prefecture.all.each do |prefecture| %>
    <% post = @posts.find { |p| p.prefecture_id == prefecture.id } %>
    <%= render "post_card", prefecture: prefecture, post: post %>
  <% end %>
</div>
